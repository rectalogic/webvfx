#!/bin/bash

BASEDIR=$(dirname "${BASH_SOURCE[0]}")
export DISPLAY=${DISPLAY:-:0}
melt -verbose \
    "${VFX_SOURCE:-red.mlt}" out=349 \
    "${VFX_TARGET:-blue.mlt}" out=349 \
    -mix 120 -mixer webvfx:${BASEDIR}/../examples/transition-simple.qml \
    "${VFX_EXTRA:-green.mlt}" out=349 \
    -mix 120 -mixer webvfx:${BASEDIR}/../examples/transition-simple.qml \
    $(eval echo $(< "${VFX_CONSUMER:-consumer_sdl}")) mlt_profile=${BASEDIR}/webvfx_profile
