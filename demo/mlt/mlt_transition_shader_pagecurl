#!/bin/bash

BASEDIR=$(dirname "${BASH_SOURCE[0]}")
export DISPLAY=${DISPLAY:-:0}
FRAG=${BASEDIR}/../examples/pageCurl.frag
if [ "${FRAG}" -nt "${FRAG}.qsb" ]; then
    qsb --glsl "100 es,120,150,400" --hlsl 50 --msl 12 -o "${FRAG}.qsb" "$FRAG"
fi
case ${PLUGIN:-frei0r} in
frei0r)
    TRANSITION=("frei0r.webvfx_mixer2" "0=\"webvfx --duration 120/30 --width {{width}} --height {{height}} ${BASEDIR}/../examples/transition-shader-pagecurl.qml\"")
    ;;
mlt)
    TRANSITION=(mltwebvfx:"webvfx --width {{width}} --height {{height}} ${BASEDIR}/../examples/transition-shader-pagecurl.qml")
    ;;
esac
REDTESTSRC=lavfi:$(COLOR=red ${BASEDIR}/tests/testsrc)
BLUETESTSRC=lavfi:$(COLOR=blue ${BASEDIR}/tests/testsrc)
melt -verbose \
    "${VFX_SOURCE:-${REDTESTSRC}}" out=349 \
    "${VFX_TARGET:-${BLUETESTSRC}}" out=349 \
    -mix 120 -mixer "${TRANSITION[@]}" \
    $(eval echo $(< "${VFX_CONSUMER:-${BASEDIR}/consumer_sdl}")) mlt_profile=${BASEDIR}/webvfx_profile
