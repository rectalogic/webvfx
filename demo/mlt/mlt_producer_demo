#!/bin/bash

BASEDIR=$(dirname "${BASH_SOURCE[0]}")
$BASEDIR/create_mov
export DISPLAY=${DISPLAY:-:0}
case ${PLUGIN:-frei0r} in
frei0r)
    PRODUCER=("frei0r.vfxpipe_source" "0=\"webvfx_frameserver --duration 199/30 --width {{width}} --height {{height}} ${BASEDIR}/../examples/producer-demo.qml\"")
    ;;
mlt)
    PRODUCER=(mltpipe:"webvfx_frameserver --width {{width}} --height {{height}} ${BASEDIR}/../examples/producer-demo.qml")
    ;;
esac
melt -verbose \
    -producer "${PRODUCER[@]}" length=199 \
    $(eval echo $(< "${VFX_CONSUMER:-${BASEDIR}/consumer_sdl}")) mlt_profile=${BASEDIR}/webvfx_profile
